<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="EMAIL API" preserve-order="true">
	<listeners>
        <listener class-name="org.alfresco.utility.report.HtmlReportListener"/>
        <listener class-name="org.alfresco.utility.testrail.TestRailExecutorListener"/>
        <listener class-name="org.alfresco.utility.testng.OSTestMethodSelector"/>
	</listeners>

	<test name="Sanity">
		<groups>
			<run>
				<include name="sanity" />
				<!-- networks is related to tenant tests -->
                <exclude name="networks"/>
			</run>
		</groups>
		<packages>
            <package name="org.alfresco.email.imap.*"/>
            <package name="org.alfresco.email.smtp.*"/>
		</packages>
	</test>

	<test name="Core">
		<groups>
			<run>
				<include name="core" />
				<!-- networks is related to tenant tests -->
                <exclude name="networks"/>
			</run>
		</groups>
		<packages>
            <package name="org.alfresco.email.imap.*"/>
            <package name="org.alfresco.email.smtp.*"/>
		</packages>
	</test>

	<test name="Full">
		<groups>
			<run>
				<include name="full" />
				<!-- networks is related to tenant tests -->
                <exclude name="networks"/>
			</run>
		</groups>
		<packages>
            <package name="org.alfresco.email.imap.*"/>
            <package name="org.alfresco.email.smtp.*"/>
		</packages>
	</test>
	
	<test name="Tenant">
		<groups>
			<run>
				<!-- networks is related to tenant tests -->
				<include name="networks" />
			</run>
		</groups>
		<packages>
            <package name="org.alfresco.email.imap.*"/>
            <package name="org.alfresco.email.smtp.*"/>
		</packages>
	</test>
</suite>
