        <!-- Dependency on the Alfresco Community WAR -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>alfresco-platform</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>alfresco-enterprise-crypto</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>alfresco-enterprise-remote-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- This is needed for compilation but it's provided -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>alfresco-platform</artifactId>
            <version>${project.version}</version>
            <classifier>classes</classifier>
            <scope>provided</scope>
        </dependency>
        <!-- 'provided' dependencies, not packaged in war. Not transitive so need
            to repeat them -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet.jsp</groupId>
            <artifactId>jsp-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.portlet</groupId>
            <artifactId>portlet-api</artifactId>
            <version>2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
