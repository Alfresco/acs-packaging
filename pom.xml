<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.alfresco</groupId>
        <artifactId>alfresco-enterprise-parent</artifactId>
        <version>5.1-SNAPSHOT</version>
    </parent>
    <artifactId>alfresco-enterprise-packaging</artifactId>
    <packaging>pom</packaging>
    <name>Alfresco Enterprise Packaging</name>

    <properties>
        <highest.basedir>${basedir}/../../..</highest.basedir>
		<dependency.update-tool.version>1.0-SNAPSHOT</dependency.update-tool.version>
        <alfresco.package.name>alfresco-platform</alfresco.package.name>
    </properties>

    <modules>
        <module>distribution</module>
        <module>file-transfer-receiver</module>
        <module>ear</module>
        <module>installer</module>
        <module>share-po</module>
        <module>update</module>
    </modules>

    <build>                  
    <!-- Switch back to Maven default -->
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>                  

</project>
