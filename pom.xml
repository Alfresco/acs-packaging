<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>alfresco-enterprise-packaging</artifactId>
    <packaging>pom</packaging>
    <name>Alfresco Enterprise Packaging</name>
    <version>5.3-SNAPSHOT</version>

    <parent>
        <groupId>org.alfresco</groupId>
        <artifactId>alfresco-super-pom</artifactId>
        <version>8</version>
    </parent>

    <scm>
        <connection>scm:git:https://git.alfresco.com/Repository/alfresco-enterprise-packaging.git</connection>
        <developerConnection>scm:git:https://git.alfresco.com/Repository/alfresco-enterprise-packaging.git</developerConnection>
        <url>https://git.alfresco.com/Repository/alfresco-enterprise-packaging</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>alfresco-internal</id>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/enterprise-releases</url>
        </repository>
        <snapshotRepository>
            <id>alfresco-internal-snapshots</id>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/enterprise-snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <alfresco.package.name>alfresco-content-services-platform</alfresco.package.name>
        <alfresco.distribution.name>${alfresco.package.name}-distributionzip</alfresco.distribution.name>
        <installer.version.name>${project.version}</installer.version.name>

        <dependency.alfresco-solr4.version>6.2</dependency.alfresco-solr4.version>
        <dependency.alfresco-mmt.version>${project.version}</dependency.alfresco-mmt.version>
        <dependency.alfresco-repository.version>6.1</dependency.alfresco-repository.version>
        <dependency.alfresco-data-model.version>6.16</dependency.alfresco-data-model.version>
        <dependency.content-services-community.version>${project.version}</dependency.content-services-community.version>
        <dependency.alfresco-enterprise-remote-api.version>6.0</dependency.alfresco-enterprise-remote-api.version>
        <dependency.alfresco-content-services-community-distribution.version>${project.version}</dependency.alfresco-content-services-community-distribution.version>
        <dependency.alfresco-jlan.version>6.3</dependency.alfresco-jlan.version>
        <dependency.alfresco-spring-encryptor.version>6.0</dependency.alfresco-spring-encryptor.version>
        <dependency.alfresco-server-root.version>6.0</dependency.alfresco-server-root.version>
        <dependency.alfresco-enterprise-crypto.version>6.0</dependency.alfresco-enterprise-crypto.version>
        <installer.alfresco-pdf-renderer.version>1.0</installer.alfresco-pdf-renderer.version>

        <dependency.postgresql.version>9.4.1212</dependency.postgresql.version>
    </properties>

    <modules>
        <module>zip</module>
        <module>ear</module>
        <module>war</module>
    </modules>

</project>
