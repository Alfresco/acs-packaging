        <groupId>org.alfresco</groupId>
        <artifactId>enterprise-overlay</artifactId>
        <version>5.1-SNAPSHOT</version>
    </parent>
    <artifactId>alfresco-platform-enterprise</artifactId>
    <packaging>war</packaging>
    <name>Alfresco Platform WAR Enterprise</name>
    <description>Alfresco Enterprise Platform Repository WAR</description>

    <properties>
        <maven.tomcat.port>${tomcat.default.alfresco.port}</maven.tomcat.port>
        <maven.tomcat.httpsPort>${tomcat.default.alfresco.ssl.port}</maven.tomcat.httpsPort>
        <maven.tomcat.path>/alfresco</maven.tomcat.path>
        <runtime.parent.folder>${basedir}/../../..</runtime.parent.folder>
    </properties>


