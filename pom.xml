    <profiles>
        <profile>
            <id>enterprise</id>
            <modules>
                <module>war</module>
            </modules>
        </profile>
        <profile>
            <id>enterpriseDocker</id>
            <modules>
                <module>war</module>
                <module>docker-alfresco</module>
                <module>docker-alfresco/aws</module>
            </modules>
        </profile>
        <profile>
            <id>fullBuild</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>war</module>
                <module>distribution</module>
                <module>docker-alfresco</module>
                <module>docker-alfresco/aws</module>
            </modules>
        </profile>
        <profile>
            <id>all-tas-tests</id>
            <modules>
                <module>tests</module>
            </modules>
        </profile>
        <profile>
            <id>release</id>
            <modules>
                <module>war</module>
                <module>distribution</module>
                <module>docker-alfresco</module>
            </modules>
        </profile>
