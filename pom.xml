<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>acs-packaging</artifactId>
    <packaging>pom</packaging>
    <name>Alfresco Content Services Packaging</name>
    <version>6.0.0-SNAPSHOT</version>

    <parent>
        <groupId>org.alfresco</groupId>
        <artifactId>alfresco-super-pom</artifactId>
        <version>9</version>
    </parent>

    <scm>
        <connection>scm:git:https://git.alfresco.com/Repository/acs-packaging.git</connection>
        <developerConnection>scm:git:https://git.alfresco.com/Repository/acs-packaging.git</developerConnection>
        <url>https://git.alfresco.com/Repository/acs-packaging</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>alfresco-internal</id>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/enterprise-releases</url>
        </repository>
        <snapshotRepository>
            <id>alfresco-internal-snapshots</id>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/enterprise-snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <!-- Set to "Early Access" to add to the version.edition property in version.properties -->
        <release.availability></release.availability>

        <dependency.acs-community-packaging.version>6.0.0-SNAPSHOT</dependency.acs-community-packaging.version>
        <dependency.alfresco-enterprise-repository.version>6.4</dependency.alfresco-enterprise-repository.version>
        <dependency.alfresco-enterprise-remote-api.version>6.3</dependency.alfresco-enterprise-remote-api.version>
        <dependency.content-services-community.version>${dependency.acs-community-packaging.version}</dependency.content-services-community.version>
        <dependency.alfresco-content-services-community-distribution.version>${dependency.acs-community-packaging.version}</dependency.alfresco-content-services-community-distribution.version>
        <dependency.alfresco-spring-encryptor.version>6.0</dependency.alfresco-spring-encryptor.version>
        <dependency.alfresco-enterprise-crypto.version>6.0</dependency.alfresco-enterprise-crypto.version>
        <dependency.alfresco-events-repo.version>1.2.14</dependency.alfresco-events-repo.version>

        <dependency.postgresql.version>9.4.1212</dependency.postgresql.version>
        <dependency.mysql.version>5.1.40</dependency.mysql.version>
        <dependency.mariadb.version>2.0.1</dependency.mariadb.version>
        <dependency.db2.version>4.19.26</dependency.db2.version>
        <dependency.ms-sql-server.version>4.0</dependency.ms-sql-server.version>
        <dependency.oracle.version>12.1.0.1.0</dependency.oracle.version>
    </properties>

    <modules>
        <module>zip</module>
        <module>ear</module>
        <module>war</module>
        <module>docker</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!-- Import community packaging dependency management to avoid repetition -->
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>acs-community-packaging</artifactId>
                <version>${dependency.acs-community-packaging.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>alfresco-enterprise-crypto</artifactId>
                <version>${dependency.alfresco-enterprise-crypto.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco.services</groupId>
                <artifactId>alfresco-events-repo</artifactId>
                <version>${dependency.alfresco-events-repo.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco.services</groupId>
                <artifactId>alfresco-events-repo-publishing</artifactId>
                <version>${dependency.alfresco-events-repo.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco.services</groupId>
                <artifactId>alfresco-events-repo-activiti</artifactId>
                <version>${dependency.alfresco-events-repo.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>alfresco-enterprise-repository</artifactId>
                <version>${dependency.alfresco-enterprise-repository.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>alfresco-enterprise-remote-api</artifactId>
                <version>${dependency.alfresco-enterprise-remote-api.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>alfresco-spring-encryptor</artifactId>
                <version>${dependency.alfresco-spring-encryptor.version}</version>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>alfresco-content-services-community-distribution</artifactId>
                <version>${dependency.alfresco-content-services-community-distribution.version}</version>
                <classifier>assembly</classifier>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>content-services-community</artifactId>
                <version>${dependency.alfresco-content-services-community-distribution.version}</version>
                <classifier>classes</classifier>
            </dependency>
            <dependency>
                <groupId>org.alfresco</groupId>
                <artifactId>content-services-community</artifactId>
                <version>${dependency.content-services-community.version}</version>
                <type>war</type>
            </dependency>

            <dependency>
                <groupId>org.apache.ws.commons.axiom</groupId>
                <artifactId>axiom-api</artifactId>
                <version>1.2.19</version>
            </dependency>
            <dependency>
                <groupId>org.apache.ws.commons.axiom</groupId>
                <artifactId>axiom-impl</artifactId>
                <version>1.2.18</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
